<%= bootstrap_form_for(@site, remote: true) do |f| %>
    <!-- user_idを入れる -->
    <%= f.hidden_field :user_id, value: current_user.id %>
    <p>
        <strong>タイトル</strong>
        <%= f.text_field(:title) %>
    </p>
    <p><strong>アドレス</strong></p>
    <%= f.url_field(:address) %>
    <p><strong>紹介文</strong></p>
    <%= f.text_area(:introduction) %>

    <%= f.submit "作成" %>
<% end %>