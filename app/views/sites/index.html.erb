<h1>一覧</h1>
<% @sites.each do |s| %>
<p>
    <strong>作成者</strong>
    <%= s.user.user_name %>
</p>
<p>
    <strong>タイトル:</strong>
    <%= s.title %>
</p>
<p>
    <strong>アドレス</strong>
    <%= s.address %>
</p>
<p>
      <strong>紹介文</strong>  
    <%= s.introduction %>
</p>

<%= link_to  "詳細", site_path(s) %>
<% end %>

<%= paginate @sites %>

<%= link_to  "作成する", new_site_path %>